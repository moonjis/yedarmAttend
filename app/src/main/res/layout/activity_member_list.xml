<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context="com.moonji.yedarmattendance.MemberListActivity"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMonthPrev"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="&lt;"
                android:textColor="@android:color/holo_blue_light"
                android:background="#00000000"

                />

            <TextView
                android:id="@+id/txtMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                 />

            <Button
                android:id="@+id/btnMonthNext"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:text=">"
                android:textSize="20dp"
                android:textColor="@android:color/holo_blue_light"
                android:background="#00000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="월"/>
            <Button
                android:id="@+id/btnWeekPrev"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:text="&lt;"
                android:textSize="20dp"
                android:textColor="@android:color/holo_blue_light"
                android:background="#00000000"

                />

            <TextView
                android:id="@+id/txtWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                 />

            <Button
                android:id="@+id/btnWeekNext"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=">"
                android:textColor="@android:color/holo_blue_light"
                android:background="#00000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="째주"/>

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabItem
                android:id="@+id/tab_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출석" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_descent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결석" />

        </android.support.design.widget.TabLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"/>
    </LinearLayout>

</LinearLayout>